<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PDC6_Mod7_Act1.Views.StudentDetails">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="StudentID" Text="{Binding StudentID}" IsReadOnly="True"/>
            <Entry x:Name="StudentName" Text="{Binding StudentName}"/>
            <Entry x:Name="Course" Text="{Binding Section}"/>
            <Entry x:Name="Year" Text="{Binding Year}"/>
            <Entry x:Name="Section" Text="{Binding Course}"/>



            <Button Text="Update" Clicked ="BtnUpdate"/>
            <Button Text="Delete" Clicked ="BtnDelete"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>